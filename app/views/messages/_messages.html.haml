.chat-message
  .chat-message__top-info
    .chat-message__top-info__talker 
      = messages.user.name
    .chat-message__top-info__data
      = messages.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-message__text
    - if messages.content.present?
      %p.chat-message__content
        = messages.content
    = image_tag messages.image.url, class: 'chat-message__image' if messages.image.present?