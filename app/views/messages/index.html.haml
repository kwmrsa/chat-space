%body
  .wrapper
    .side-bar
      .bar-header
        %h3.header__name
          = current_user.name
        .bar-header__box
          %p.bar-header__box__user-name
          %ul.bar-header__box__menu 
            %li.bar-header__box__new-group
              = link_to new_group_path do
                = fa_icon 'pencil-square-o', class: 'icon'
            %li.bar-header__box__edit-user
              = link_to edit_user_path(current_user) do
                = fa_icon 'cog', class: 'icon'
      .side-groups
        - current_user.groups.each do |group|
          .groups
            = link_to group_messages_path(group) do
            .group__group-name
              = group.name
            .group__latest-message
              メッセージはまだありません。
    .chat-main
      .main-chat-top
        .main-chat-top__left-box
          %h2.main-chat-top__left-box__current-group
            = @group.name
          %ul.main-chat-top__left-box__member-list 
            Member:
            %li.main-chat-top__left-box__member-list__member
              - @group.group_users.each do |group_user|
                = group_user.user.name
        = link_to edit_group_path(@group) do
          .main-chat-top__edit-btn
            edit
      .chat-main__chat-messages
        .chat-message
          = render @messages
          .chat-message__top-info
            .chat-message__top-info__talker 
              = message.user.name
            .chat-message__top-info__data
              = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
          .chat-message__text
            - if message.content.present?
              %p.chat-message__content
                = message.content
            = image_tag message.image.url, class: 'chat-message__image' if message.image.present?
      .chat-form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'
